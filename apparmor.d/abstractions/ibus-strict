# Allow communicating with ibus-daemon (this allows sniffing key events)

  abi <abi/4.0>,

  owner @{user_cache_dirs}/ibus/dbus-@{rand8} rw,

  owner @{user_config_dirs}/ibus/ r,
  owner @{user_config_dirs}/ibus/bus/ rw,
  owner @{user_config_dirs}/ibus/bus/@{hex32}-unix-@{int} rw,
  owner @{user_config_dirs}/ibus/bus/@{hex32}-unix-wayland-@{int} rw,

  include if exists <abstractions/ibus-strict.d>

# vim:syntax=apparmor
