# Allow write access to the uinput device for emulating input devices from
# userspace for sending input events.

  abi <abi/4.0>,

  /dev/uinput rw,
  /dev/input/uinput rw,

  include if exists <abstractions/uinput.d>

# vim:syntax=apparmor
